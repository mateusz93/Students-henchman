<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="edu.p.lodz.pl.studentshenchman.SaveDataActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:background="#AAADD8E6"
                android:padding="@dimen/activity_main_textview_padding">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Czy posiadasz token?"
                            android:id="@+id/tokenTextView"
                            android:layout_column="0"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:padding="@dimen/activity_main_textview_padding"/>

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.5">

                        <RadioGroup
                            android:id="@+id/tokenRadioGroup"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_column="0">

                            <RadioButton
                                android:id="@+id/tokenAvailable"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="Tak"
                                android:checked="true"
                                android:layout_column="0"
                                android:layout_weight="1"/>

                            <RadioButton
                                android:id="@+id/tokenNotAvailable"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:text="Nie"
                                android:layout_column="1"
                                android:layout_weight="1"/>
                        </RadioGroup>

                    </TableRow>

                </TableLayout>


            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:background="#AAADD8E6"
                android:padding="@dimen/activity_main_textview_padding"
                android:layout_marginTop="@dimen/activity_main_button_margin">

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Tutaj wpisz swÃ³j token"
                    android:id="@+id/tokenValue"
                    android:layout_column="0"
                    android:padding="@dimen/activity_main_button_padding"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/activity_main_button_margin">

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Zapisz dane na serwerze"
                    android:id="@+id/saveDataButton"
                    android:layout_column="0"
                    android:padding="@dimen/activity_main_button_padding"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:background="#AAADD8E6"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:layout_marginTop="@dimen/activity_main_button_margin">

            </TableRow>



        </TableLayout>
    </LinearLayout>

</RelativeLayout>
