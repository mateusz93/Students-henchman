<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    tools:context="edu.p.lodz.pl.studentshenchman.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_column="0"
                    android:src="@drawable/logo"
                    android:id="@+id/logo"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:layout_marginTop="@dimen/activity_main_button_margin">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:padding="@dimen/activity_main_textview_padding"
                    android:background="#AAADD8E6">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.25">

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Najbliższy przedmiot"
                            android:id="@+id/widgetTitle"
                            android:layout_column="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:paddingBottom="@dimen/activity_main_textview_padding"
                            android:background="@drawable/header_border"
                            android:layout_weight="1" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.75">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/activity_main_textview_padding">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.25">
                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="Projektowanie aplikacji mobilnych"
                                    android:id="@+id/nextSubjectName"
                                    android:layout_column="0"
                                    android:scaleType="centerCrop"
                                    android:layout_weight="1" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.25">
                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="8.15 - 10.00"
                                    android:id="@+id/nextSubjectTime"
                                    android:layout_column="0"
                                    android:scaleType="centerCrop"
                                    android:layout_weight="1" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.25">
                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="CTI, Sala 303"
                                    android:id="@+id/nextSubjectPlace"
                                    android:layout_column="0"
                                    android:scaleType="centerCrop"
                                    android:layout_weight="1" />
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="0.25">
                                <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:text="Dr. inz Rafal Kielbik"
                                    android:id="@+id/nextSubjectTeacher"
                                    android:layout_column="0"
                                    android:scaleType="centerCrop"
                                    android:layout_weight="1" />
                            </TableRow>

                        </TableLayout>

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text=""
                            android:id="@+id/localizationButton"
                            android:layout_column="1"
                            android:layout_margin="@dimen/activity_main_button_margin"
                            android:background="@drawable/nav"
                            android:scaleType="center"
                            android:layout_weight="1" />

                    </TableRow>

                </TableLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.25">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/activity_main_button_margin">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:layout_marginTop="@dimen/activity_main_button_margin">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Plan zajęć"
                            android:id="@+id/timesheetButton"
                            android:layout_column="0"
                            android:layout_marginBottom="@dimen/activity_main_button_margin"
                            android:layout_marginRight="@dimen/activity_main_button_margin"
                            android:padding="@dimen/activity_main_button_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:background="#AAADD8E6"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Ustawienia"
                            android:id="@+id/settingsButon"
                            android:layout_column="1"
                            android:layout_marginBottom="@dimen/activity_main_button_margin"
                            android:layout_marginLeft="@dimen/activity_main_button_margin"
                            android:padding="@dimen/activity_main_button_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:background="#AAADD8E6"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:layout_marginTop="@dimen/activity_main_button_margin">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Zapisz dane na serwerze"
                            android:id="@+id/saveDataButton"
                            android:layout_column="0"
                            android:layout_marginBottom="@dimen/activity_main_button_margin"
                            android:layout_marginRight="@dimen/activity_main_button_margin"
                            android:padding="@dimen/activity_main_button_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:background="#AAADD8E6"
                            android:layout_weight="1" />

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Wczytaj dane z serwera"
                            android:id="@+id/readDataButton"
                            android:layout_column="1"
                            android:layout_marginBottom="@dimen/activity_main_button_margin"
                            android:layout_marginLeft="@dimen/activity_main_button_margin"
                            android:padding="@dimen/activity_main_button_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:background="#AAADD8E6"
                            android:layout_weight="1" />
                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:layout_marginTop="@dimen/activity_main_button_margin">

                        <Button
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="Skanuj kod QR"
                            android:id="@+id/scanQRCode"
                            android:layout_column="0"
                            android:layout_marginBottom="@dimen/activity_main_button_margin"
                            android:layout_marginRight="@dimen/activity_main_button_margin"
                            android:padding="@dimen/activity_main_button_padding"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:background="#AAADD8E6"
                            android:layout_weight="1" />
                    </TableRow>

                </TableLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
