<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                tools:context="edu.p.lodz.pl.studentshenchman.settings.SettingsActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/activity_main_button_margin"
                        android:layout_weight="0.2"
                        android:background="#AAADD8E6"
                        android:padding="@dimen/activity_main_textview_padding">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <TextView
                                    android:id="@+id/facultyTextView"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:text="Wydział"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <Spinner
                                    android:id="@+id/facultySelectBox"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:entries="@array/faculties"
                                    android:prompt="@string/faculties_prompt"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                        </TableLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/typeTableRow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/activity_main_button_margin"
                        android:layout_weight="0.2"
                        android:background="#AAADD8E6"
                        android:padding="@dimen/activity_main_textview_padding">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <TextView
                                    android:id="@+id/typeTextView"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:text="Typ studiów"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <Spinner
                                    android:id="@+id/typeSelectBox"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:entries="@array/types"
                                    android:prompt="@string/types_prompt"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                        </TableLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/subjectTableRow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/activity_main_button_margin"
                        android:layout_weight="0.2"
                        android:background="#AAADD8E6"
                        android:padding="@dimen/activity_main_textview_padding">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <TextView
                                    android:id="@+id/subjectTextView"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:text="Kierunek"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <Spinner
                                    android:id="@+id/subjectSelectBox"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:entries="@array/subjects"
                                    android:prompt="@string/subjects_prompt"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                        </TableLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/majorTableRow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/activity_main_button_margin"
                        android:layout_weight="0.2"
                        android:background="#AAADD8E6"
                        android:padding="@dimen/activity_main_textview_padding">

                        <TableLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <TextView
                                    android:id="@+id/majorTextView"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:layout_weight="1"
                                    android:text="Zaznacz specjalizacje"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/activity_main_textview_padding">

                                <CheckBox
                                    android:id="@+id/ti1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:text="TI1"/>

                                <CheckBox
                                    android:id="@+id/ti2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="1"
                                    android:text="TI2"/>

                                <CheckBox
                                    android:id="@+id/ti3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="2"
                                    android:text="TI3"/>
                            </TableRow>

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:padding="@dimen/activity_main_textview_padding">

                                <CheckBox
                                    android:id="@+id/tm1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="0"
                                    android:text="TM1"/>

                                <CheckBox
                                    android:id="@+id/tm2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="1"
                                    android:text="TM2"/>

                                <CheckBox
                                    android:id="@+id/tm3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_column="2"
                                    android:text="TM3"/>
                            </TableRow>

                        </TableLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/readButtonTableRow"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="@dimen/activity_main_button_margin"
                        android:layout_weight="0.2">

                        <Button
                            android:id="@+id/readDataButton"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:background="#AAADD8E6"
                            android:padding="@dimen/activity_main_button_padding"
                            android:text="Pobierz plan"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                    </TableRow>

                </TableLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</RelativeLayout>