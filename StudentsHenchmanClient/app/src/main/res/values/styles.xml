<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/light_blue_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="spinner" parent="@android:style/Widget.Spinner">


    </style>

    <style name="button" parent="style/Widget.AppCompat.Button.Colored">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:focusable">true</item>
        <item name="android:radius">1dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="dashboardIcon">
        <item name="android:background">@color/light_blue_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="lesson_item_value_label">
        <item name="android:textColor">@color/light_blue_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="lesson_item_value">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginTop">7sp</item>
        <item name="android:layout_marginBottom">7sp</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_marginLeft">7sp</item>
        <item name="android:layout_marginRight">7sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
